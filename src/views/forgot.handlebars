<main class="mt-3">
  <div class="pb-4">
    <div class="form-bg border rounded-4">
      <div class="w-100 p-4 d-flex justify-content-center pb-4">
        <div style="width: 26rem">
          <div class="tab-content">
            <div
              class="tab-pane fade active show"
              id="pills-login"
              role="tabpanel"
              aria-labelledby="tab-login"
            >
              <form id="login-form">
                <div class="text-center mb-1">
                  <p class="mb-3">
                    Recupera tu constraseña:
                  </p>
                </div>
                <div class="mb-3">
                  <label for="username" class="form-label">
                    Usuario:
                  </label>
                  <input
                    type="text"
                    class="form-control"
                    id="username"
                    placeholder="Ingrese su usuario"
                    autocomplete="off"
                    required
                  />
                </div>
                <div class="mb-3 position-relative">
                  <label for="password" class="form-label">
                    Nueva contraseña:
                  </label>
                  <div id="eye-container">
                    <i
                      class="fa-regular fa-eye-slash show-password"
                      id="eye-close"
                    ></i>
                    <i class="fa-regular fa-eye" id="eye-open"></i>
                  </div>
                  <input
                    type="password"
                    class="form-control"
                    id="password"
                    placeholder="Ingrese su contraseña"
                    autocomplete="current-password"
                    required
                  />
                </div>
                <div class="mb-3 position-relative">
                  <label for="new-password" class="form-label">
                    Repite contraseña:
                  </label>
                  <div id="new-eye-container">
                    <i
                      class="fa-regular fa-eye-slash show-password"
                      id="new-eye-close"
                    ></i>
                    <i class="fa-regular fa-eye" id="new-eye-open"></i>
                  </div>
                  <input
                    type="password"
                    class="form-control"
                    id="new-password"
                    placeholder="Re ingrese su contraseña"
                    autocomplete="current-password"
                    required
                  />
                </div>
                <div class="mb-3 d-flex gap-3 flex-nowrap">
                  <p class="mb-0">
                    ¿No tienes cuenta?
                  </p>
                  <a
                    href="/signup"
                    class="link-offset-2 link-offset-3-hover link-underline link-underline-opacity-0 link-underline-opacity-75-hover"
                  >
                    Registrate
                  </a>
                </div>
                <p class="text-center">
                  o:
                </p>
                <button
                  type="submit"
                  id="forgot-button"
                  class="btn-submit w-100 mb-4 mt-2"
                >
                  Cambia tu constraseña
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
<!-- Show Password -->
<script src="/js/showPassword.scripts.js"></script>
<!-- Custom JS -->
<script src="/js/forgot.scripts.js"></script>