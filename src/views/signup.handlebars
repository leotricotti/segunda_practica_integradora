<main class="mt-3">
  <div class="pb-4">
    <div class="form-bg border rounded-4">
      <div class="w-100 p-4 d-flex justify-content-center pb-4">
        <div style="width: 26rem">
          <ul
            class="nav nav-pills d-flex justify-content-between mb-4 gap-3"
            id="ex1"
            role="tablist"
          >
            <li class="nav-item flex-fill" role="presentation">
              <button class="nav-link" onclick="moveToLogin()">
                Inicia sesión
              </button>
            </li>
            <li class="nav-item flex-fill" role="presentation">
              <button class="nav-link actived">
                Registrate
              </button>
            </li>
          </ul>
          <div class="tab-content">
            <div
              class="tab-pane fade active show"
              id="pills-login"
              role="tabpanel"
              aria-labelledby="tab-login"
            >
              <div class="text-center mb-1">
                <p class="mb-3">
                  Registrate con:
                </p>
                <button type="button" class="btn btn-link btn-floating mx-1">
                  <i class="fab fa-facebook-f"></i>
                </button>

                <button type="button" class="btn btn-link btn-floating mx-1">
                  <i class="fab fa-google"></i>
                </button>

                <button
                  type="button"
                  class="btn btn-link btn-floating mx-1"
                  onclick="moveToGithub()"
                >
                  <i class="fab fa-github"></i>
                </button>
              </div>

              <p class="text-center mb-1">
                o:
              </p>
              <form id="signup-form">
                <div class="mb-3">
                  <label for="first_name" class="form-label">
                    Nombre:
                  </label>
                  <input
                    type="text"
                    class="form-control"
                    id="first_name"
                    placeholder="Ingrese su nombre"
                    autocomplete="family-name"
                    required
                  />
                </div>
                <div class="mb-3">
                  <label for="last_name" class="form-label">
                    Apellido:
                  </label>
                  <input
                    type="text"
                    class="form-control"
                    id="last_name"
                    placeholder="Ingrese su apellido"
                    autocomplete="family-name"
                    required
                  />
                </div>
                <div class="mb-3">
                  <label for="age" class="form-label">
                    Edad:
                  </label>
                  <input
                    type="number"
                    class="form-control"
                    id="age"
                    placeholder="Ingrese su edad"
                    autocomplete="current-age"
                    required
                  />
                </div>
                <div class="mb-3">
                  <label for="username" class="form-label">
                    Correo:
                  </label>
                  <input
                    type="email"
                    class="form-control"
                    id="username"
                    placeholder="Ingrese su correo"
                    autocomplete="off"
                    required
                  />
                </div>
                <div class="mb-3 position-relative">
                  <label for="password" class="form-label">
                    Contraseña:
                  </label>
                  <div id="eye-container">
                    <i
                      class="fa-regular fa-eye-slash show-password"
                      id="eye-close"
                    ></i>
                    <i class="fa-regular fa-eye" id="eye-open"></i>
                  </div>
                  <input
                    type="password"
                    class="form-control"
                    id="password"
                    placeholder="Ingrese su contraseña"
                    autocomplete="current-password"
                    required
                  />
                </div>
                <div class="row mb-4">
                  <div class="col-md-12">
                    <div class="form-check mb-3 mb-md-0">
                      <input
                        class="form-check-input"
                        type="checkbox"
                        value=""
                        id="loginCheck"
                        checked=""
                      />
                      <label class="form-check-label" for="loginCheck">
                        He leido y acepto los terminos y condiciones
                      </label>
                    </div>
                  </div>
                </div>
                <button
                  type="submit"
                  id="signup-button"
                  class="btn-submit w-100 mb-4"
                >
                  Aceptar
                </button>
              </form>
            </div>
            <div
              class="tab-pane fade"
              id="pills-register"
              role="tabpanel"
              aria-labelledby="tab-register"
            ></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
